{#=====================================================
  Admin Task Page
  - Shows which volunteers have signed up for a task
=====================================================#}

{% extends 'pages/base.jinja' %}

{% block title %}
    Gymnastics Nelson - Task Volunteers
{% endblock %}

{% block content %}

<h1>{{ task.name }}</h1>

<p>{{ task.description }}</p>

<hr>

<h2>Volunteers Signed Up</h2>

{% if users %}
    <ul>
        {% for user in users %}
            <li>{{ user.name }}</li>
        {% endfor %}
    </ul>
{% else %}
    <p>No volunteers have signed up for this task yet.</p>
{% endif %}

<a role="button" class="button" href="/">Back to Task List</a>

{% endblock %}
