{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Gymnastics Nelson

{% endblock %}


{% block content %}

    <h1>Tasks</h1>


    <article>

        <ul>
            {% for task in tasks %}

                <li>
                    <a href="/task/{{ task.id }}">
                        <strong>{{ task.name }}</strong>
                    </a>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>

{% endblock %}